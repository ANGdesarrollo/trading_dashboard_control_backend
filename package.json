  "scripts": {
    "build": "rm -rf dist && swc src/** --strip-leading-paths 1 -d dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start -b swc -w --type-check --outDir src",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix": "eslint -c .eslintrc.js \"{src,apps,libs,test}/**/*.ts\" --fix",
    "ts:check": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "coverage": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk"
  },
  "dependencies": {
    "@fastify/cookie": "^9.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
